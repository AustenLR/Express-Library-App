<% include ./partials/header %>

        <table class="table table-hover">
          <thead>
            <th>Title</th>
            <th>Actors</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Plot</th>
            <th>Delete</th>
          </thead>
          <tbody>
          <% movies.forEach(function(el){ %>
          <tr>
            <td><a href='/movies/<%= el.id %>'> <%= el.title %>  </a> </td>
            <td> <%= el.actors %> </td>
            <td> <%= el.genre %> </td>
            <td> <%= el.year %> </td>
            <td> <%= el.plot %> </td>
            <td><form action="/movies/<%= el.id%>?_method=delete" method="POST"><button type="submit" class="btn btn-warning btn-xs">DELETE</button></form></td>
          </tr>
          <% }) %>
          <tr>
            <td><form action="/movies/new" method="GET"><button type="submit" class="btn btn-info btn-sm">Add Movie</button></form></td>
          </tr>
          </tbody>        
        </table>

<% include ./partials/footer %>